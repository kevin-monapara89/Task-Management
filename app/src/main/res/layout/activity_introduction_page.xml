<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.IntroductionPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#00d4d4">

        <TextView
            style="@style/TextColorStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to To-Do Manager"
            android:layout_gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/introduction"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_30sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empower Your Productivity"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:textColor="#005f91"
            android:layout_marginTop="@dimen/_15sdp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Personal Productivity Partner"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:textColor="#00d4d4"
            android:layout_marginTop="@dimen/_16sdp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to our innovation to-do list app!\n Start your day with purpose and productivity."
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnstart"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center"
            app:cardBackgroundColor="#00d4d4"
            android:layout_margin="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_15sdp">

            <TextView
                style="@style/TextColorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Start"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

</LinearLayout>