<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/logobg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardBackgroundColor="#EEF6E54F">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/list"
                android:layout_margin="@dimen/_5sdp"/>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_4sdp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/prioritybg"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="#85AAF4"
                app:cardCornerRadius="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txtpriority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Normal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="fhiuhslknjklnlklnllnkln"
                android:textColor="#191919"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdiscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="fhiuhslk"
                android:textColor="#6A6A6A"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/shapebg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_70sdp"
                android:background="@drawable/todoshape"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#FCFDFD"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="25-06-23"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#FAFBFB"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/txttime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="08:00 AM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/menuitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/option" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center|right"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_15sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_30sdp">

                <CheckBox
                    android:id="@+id/imgCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_60sdp"
                android:onClick="show"
                android:layout_marginLeft="@dimen/_180sdp"
                android:src="@drawable/baseline_notifications_none_24"/>

        </FrameLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>