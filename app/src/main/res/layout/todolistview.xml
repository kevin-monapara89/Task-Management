<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/frmbg"
            android:layout_width="@dimen/_62sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_6sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#61E527">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="23"
                    android:textColor="#2F2F2F"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="#C7DDEF">

                <TextView
                    android:id="@+id/txtmonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JUN"
                    android:textColor="#868686"
                    android:textSize="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/txtyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2023"
                    android:textColor="#868686"
                    android:textSize="@dimen/_8sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:gravity="right"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_6sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:cardBackgroundColor="#C7DDEF"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/txttime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="08:00 AM"
                        android:textColor="#868686"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fhiuhslk"
                    android:textColor="#191919"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdiscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fhiuhslk"
                    android:textColor="#6A6A6A"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/check"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_30sdp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/checkedcircle"
                        app:tint="#41DE1E" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:background="#E57373"
                        >

                        <ImageView
                            android:id="@+id/imgdelete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/delete_24" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:background="#81C784"
                        >

                        <ImageView
                            android:id="@+id/imgubdata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/update_24" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>